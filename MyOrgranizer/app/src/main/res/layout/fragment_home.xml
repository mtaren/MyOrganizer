<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.myorganizer.myorgranizer.HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <!--<TextView android:layout_width="match_parent" android:layout_height="match_parent"-->
        <!--android:text="@string/hello_blank_fragment" />-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/up_one_level_wrapper">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Up one Level"
            android:background="@drawable/highlight_blue"
            android:id="@+id/up_one_level_butt"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>

    <com.tonicartos.widget.stickygridheaders.StickyGridHeadersGridView
        android:id="@+id/gridView"
        android:layout_below="@id/up_one_level_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:verticalSpacing="4dp"
        android:horizontalSpacing="4dp"
        android:listSelector="@drawable/highlight_blue"
        android:drawSelectorOnTop="true"
        android:stretchMode="columnWidth"
        android:numColumns="3"
        android:columnCount="3"
        />

    <!--android:focusable="true"-->

</RelativeLayout>
